<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/detail1"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="wo1-load date1-container1"
            android:textColor="@color/dark_text_color"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <!-- ****** confirm ***********-->
            <LinearLayout
                android:id="@+id/appt_confirm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:visibility="gone"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/appt_confirm_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textColor="@color/dark_text_color"
                    android:text="APPT CONFIRM"
                    android:background="@drawable/button_click_effect"/>

                <Button
                    android:id="@+id/pod_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textColor="@color/dark_text_color"
                    android:text="POD"
                    android:background="@drawable/button_click_effect"/>
            </LinearLayout>

            <!--************** view ************************-->

            <LinearLayout
                android:id="@+id/appt_view_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:visibility="gone"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/edit_view_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textColor="@color/dark_text_color"
                    android:text="EDIT/VIEW"
                    android:background="@drawable/button_click_effect"/>

                <Button
                    android:id="@+id/track_pod_bt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textColor="@color/dark_text_color"
                    android:text="TRACK/POD"
                    android:background="@drawable/button_click_effect"/>
            </LinearLayout>
        </FrameLayout>



    </LinearLayout>

</LinearLayout>