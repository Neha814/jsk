<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="transport.com.transportationapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_appicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="transport.vendor.activity.SplashActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="transport.vendor.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="transport.vendor.activity.ForgotPasswordActivity"
            android:label="@string/title_activity_forgot_password"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="transport.vendor.activity.SignUpActivity"
            android:label="SignUpActivity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
        <activity
            android:name="transport.vendor.activity.HomeActivity"
            android:label="HomeActivity"
            android:windowSoftInputMode="adjustPan" >
        </activity>
    </application>

</manifest>
